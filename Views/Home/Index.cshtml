@model IndexViewModel
<!DOCTYPE html>
<html>  
    <head>
        <title>Goblin Personal Finance</title>
    </head>
    <body>
        <h1>Welcome to GoblinPF!</h1>
        <h3>Keep tabs on your gold son</h3>
        <form method="post">
            <div>
                <label asp-for="Cost"></label>
                <input asp-for="Cost" />
                <select asp-for="CategoryId" asp-items="@Model.Categories">
                    <option>Please Select a Category</option>
                </select>
            </div>
            <div>
                <input type="submit" value="Enter" />
            </div>
            <div>
                @if (Model.TransactionMade)
                {
                    <h2>Transaction added!</h2>
                }
            </div>
        </form>
    </body>
</html>